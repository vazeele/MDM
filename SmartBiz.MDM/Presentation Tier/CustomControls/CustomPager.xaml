<UserControl x:Class="SmartBiz.MDM.Presentation.CustomControls.CustomPager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c="clr-namespace:SmartBiz.MDM.Presentation.CustomControls"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" x:Name="FastBackward">
            &lt;&lt;
        </Button>
        <Button  Grid.Column="1" x:Name="Backward">
            &lt;
        </Button>
        <Label x:Name="PageLabel" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="2">
        </Label>
        <Button Grid.Column="3" x:Name="Forward">
            &gt;
        </Button>
        <Button  Grid.Column="4" x:Name="FastForward">
            &gt;&gt;
        </Button>
    </Grid>
</UserControl>